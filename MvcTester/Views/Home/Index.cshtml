@{
    ViewBag.Title = "Home Page";
}

@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
                <h2>@ViewBag.Message</h2>
            </hgroup>
            <p>
                To learn more about ASP.NET MVC visit
                <a href="http://asp.net/mvc" title="ASP.NET MVC Website">http://asp.net/mvc</a>.
                The page features <mark>videos, tutorials, and samples</mark> to help you get the most from ASP.NET MVC.
                If you have any questions about ASP.NET MVC visit
                <a href="http://forums.asp.net/1146.aspx/1?MVC" title="ASP.NET MVC Forum">our forums</a>.
            </p>
        </div>
    </section>
}
<h3>Pets in the system:</h3>
<table>
    <tr>
        <th>Owner ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Pet Name</th>
        <th>Pet ID</th>
    </tr>

    @foreach (KeyValuePair<MvcTester.Models.Petowner, List<MvcTester.Models.Pet>> entry in ViewData.Model){
        <tr>
            <td>@Html.Encode(entry.Key.PetOwnerID)</td>
            <td>@Html.Encode(entry.Key.PetOwnerFirstName)</td>
            <td>@Html.Encode(entry.Key.PetOwnerLastName)</td>
            @foreach (var p in entry.Value)
            {
                    <td>@Html.Encode(p.PetName)</td>
                    <td>@Html.Encode(p.PetID)</td>
            }
        </tr>
    }
</table>
